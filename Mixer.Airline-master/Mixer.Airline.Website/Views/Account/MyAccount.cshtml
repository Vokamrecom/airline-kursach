@model  Airline.Model.Models.PassengerViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    ViewBag.Title = "My account";
    string email = Model.Email;
    string name = Model.Name;
    string surname = Model.Surname;
}
    <div class="animated animatedFadeInUp fadeInUp">
        <br />
        <center>
            <div class="col-md-6">
                <div class="row center">
                    <div class="col-6 ">
                        @if (Model.ProfileImage != null)
                        {
                            <img style="width: 18vw; border:1px solid" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ProfileImage))" />
                        }
                        else
                        {
                            <img src="~/Style/images/nophoto.png" style="border:1px solid" />
                        }
                    </div>
                    <div class="col-6">
                        <div class="row" style="display: flex; align-items: center;">
                            <span style="font-size:2vw">@name @surname </span>
                            <div><a class="btn-edit" href="/Account/EditInfo"><i class="fa fa-edit" style="font-size:0.9vw"></i></a></div>
                        </div>
                        <div class="row ">
                            <span style="font-size:1.5vw">@email</span>
                        </div>

                        <div class="row">
                            @using (Html.BeginForm("Upload", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="custom-file mt-3" style="width:17vw">
                                    <input type="file" class="custom-file-input" accept="image/*" name="photo">
                                    <label class="custom-file-label" for="customFile" style="text-align: left;">Please choose photo</label>
                                </div>
                                <input type="submit" style="width:17vw" value="Upload" class="btn btn-block btn-success mt-3" />
                            }
                        </div>
                        <div class="row" style="display: flex; align-items: center;">
                            <a class="btn btn-primary search-btn" style="width:17vw" href="/Account/ChangePassword">Change password</a>
                        </div>
                    </div>
                </div>
            </div>
        </center>
    </div>