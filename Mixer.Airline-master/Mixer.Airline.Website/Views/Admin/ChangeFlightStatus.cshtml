@model Airline.Model.Models.FlightDelayModel
@{
    ViewData["Title"] = "ChangeFlightStatus";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container animated animatedFadeInUp fadeInUp" style="display: flex; flex-direction: row; justify-content: center;">
        <div class="col-sm-5">
            <div id="loginForm">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.FlightId, new { htmlAttributes = new { @type = "hidden", @class = "form-control" } })
                    <div class="form-group">
                        <div class="col-md-12">
                            <label> Please enter delay (no more then 3) </label>
                            @Html.EditorFor(model => model.DelayTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please delay time" } })
                            @Html.ValidationMessageFor(model => model.DelayTime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <a class="btn btn-secondary" href="/Admin/Index">Back to List</a>
                            <input type="submit" value="Change dep." class="btn btn-success" style="width: 165px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}